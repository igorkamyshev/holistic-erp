{
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@back/*": ["./*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["**/*.spec.ts"]
}
