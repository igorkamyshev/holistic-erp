{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "&back/*": ["./back/src/*"],
      "&front/*": ["./front/src/*"],
      "&landing/*": ["./landing/src/interactive/*"],
      "&shared/*": ["./shared/*"]
    }
  },
  "include": [
    "back/src/**/*",
    "front/src/**/*",
    "landing/src/interactive/*",
    "shared/**/*"
  ],
  "exclude": ["node_modules/**/*", "front/node_modules/**/*"]
}
